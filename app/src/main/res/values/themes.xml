<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="Theme.GuestLogApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">#6EC1E4</item>
        <item name="colorPrimaryVariant">#003366</item>
        <item name="colorOnPrimary">#FFFFFF</item>

        <!-- Secondary and accent colors -->
        <item name="colorSecondary">#1A73E8</item>
        <item name="colorSecondaryVariant">#FFAB40</item>
        <item name="colorOnSecondary">#FFFFFF</item>

        <!-- Background, surface, and text colors -->
        <item name="android:windowBackground">#FFFFFF</item>
        <item name="colorSurface">#F0F0F0</item>
        <item name="colorOnSurface">#003366</item>

        <!-- Primary text colors -->
        <item name="android:textColorPrimary">#003366</item>
        <item name="android:textColorSecondary">#6EC1E4</item>

        <!-- Customize your status bar and navigation bar -->
        <item name="android:statusBarColor">#003366</item>

        <!-- Button styles -->
        <item name="buttonStyle">@style/Widget.GuestLogApp.Button</item>
    </style>

    <style name="Widget.GuestLogApp.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">#003366</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="cornerRadius">16dp</item> <!-- Increased corner radius -->
        <item name="android:elevation">4dp</item> <!-- Adds shadow effect for depth -->
        <item name="android:padding">12dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <!-- Splash screen theme (if applicable) -->
    <style name="Theme.GuestLogApp.Splash" parent="Theme.MaterialComponents.DayNight">
        <item name="android:windowBackground">#6EC1E4</item>
        <!-- Add any other splash screen customizations here -->
    </style>

</resources>
