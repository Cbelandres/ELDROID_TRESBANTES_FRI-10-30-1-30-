<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="30dp"
    tools:context=".Dashboard">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvGuestList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp"
        tools:listitem="@layout/item_guest" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_margin="8dp"
        android:background="@drawable/rounded_item_background"
        android:gravity="center_horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAddGuest"
            style="@style/Widget.GuestLogApp.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Add  Guest"
            android:layout_marginEnd="5dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/GuestInfo"
            style="@style/Widget.GuestLogApp.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Guest Info"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="5dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/BookHotel"
            style="@style/Widget.GuestLogApp.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Book Hotel"
            android:layout_marginStart="8dp" />

    </LinearLayout>

</LinearLayout>
